		THIS.MINHEIGHT = INT(THIS.HEIGHT / 2)
		THIS.MINWIDTH = INT(THIS.WIDTH / 2)
		
		IF _VFP.STARTMODE = 4
			_SCREEN.CLOSABLE = .F.
			ON SHUTDOWN CLEAR EVENTS
			SHOW WINDOW vfpthemeexplorer
			READ EVENTS
		ELSE
			SHOW WINDOW vfpthemeexplorer
		ENDIF
	ENDPROC

